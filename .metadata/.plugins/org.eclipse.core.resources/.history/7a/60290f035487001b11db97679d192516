	<delete id="delete">
		delete from khy_attach where uuid = #{uuid}
	</delete>
	
	<select id="findByBno" resultType="com.my.domain.BoardAttachVO">
		select * from khy_attach where bno = #{bno}
	</select>
	
	<delete id="deleteAll">
		delete from khy_attach where bno = #{bno}
	</delete>
	
